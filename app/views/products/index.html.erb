<br><% @products.each do |product| %>
<div class="column">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="well well-lg">
      <div class="product-title"><br>
        <%= link_to product.name, product_path(product) %>
      </div><br>
      <%= image_tag product.pics %>
      <%= product.price %>
      <div class="product-body">
        <big><%= truncate(product.description, length: 100) %></big>
        <div class="product-meta-details">

        Wishlist by: <%= product.wish_count %>,In-cart :<%= product.buy_count %>
        </div>
      </div>
      <div class="product-actions">
        <%= link_to 'Add to wishlist',"#",class: "btn btn-xs btn-primary" %>
        <%= link_to 'Add to cart',"#",class: "btn btn-success btn-xs" %>
        <%= link_to 'Show Product',product_path(product),class: "btn btn-primary btn-xs" %>
      </div>
      <br>

<% end %>
    </div>
  </div>
</div>
